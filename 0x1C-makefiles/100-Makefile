CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
NAME = school

CC := gcc

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	@$(CC) $(CFLAGS) -o $@ $^

clean:
	-$(RM) $(NAME)

oclean:
	-$(RM) $(SRC:.c=.o)

fclean: clean oclean

re: fclean all

$(NAME): $(SRC)
	@$(CC) -o $@ $^

.PHONY: all clean oclean fclean re
